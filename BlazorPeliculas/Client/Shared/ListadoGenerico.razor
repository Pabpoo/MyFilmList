@typeparam Titem

@if (Listado is null)
{
	@if (Cargando is null)
	{
		<img src="https://media0.giphy.com/media/3oEjI6SIIHBdRxXI40/200w.gif?cid=6c09b9524o2j90jdbpq8k5pmqelllexrxllb066vb0b4yb7p&ep=v1_gifs_search&rid=200w.gif&ct=g" />
	}
	else
	{
		@Cargando
	}
}
else if (Listado.Count == 0)
{
	@if (EmptyData is null)
	{
		<p>No hay peliculas para mostrar</p>
	}
	else
	{
		@EmptyData
	}
}
else
{
	if(Data is not null)
	{
		@foreach (var elem in Listado)
		{
			@Data(elem)
		}
	}
	else
	{
		@DataComplete
	}
}

@code {

	[Parameter]
	public RenderFragment Cargando { get; set; } = null!;

	[Parameter]
	public RenderFragment EmptyData { get; set; } = null!;

	[Parameter]
	public RenderFragment<Titem> Data { get; set; } = null!;
	
	[Parameter]
	public RenderFragment DataComplete { get; set; } = null!; 

	[Parameter]
	[EditorRequired]
	public List<Titem> Listado { get; set; } = null!;
}
